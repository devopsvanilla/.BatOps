# =================================
# N8N Stack Environment Variables
# =================================

# ---- PostgreSQL Configuration ----
POSTGRES_VERSION=16
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n_password
POSTGRES_INITDB_ARGS=--encoding=UTF-8

# PostgreSQL Health Check Configuration
POSTGRES_HEALTHCHECK_INTERVAL=10s
POSTGRES_HEALTHCHECK_TIMEOUT=5s
POSTGRES_HEALTHCHECK_RETRIES=5

# ---- pgAdmin Configuration ----
PGADMIN_VERSION=latest
PGADMIN_DEFAULT_EMAIL=admin@n8n.dev
PGADMIN_DEFAULT_PASSWORD=pgadmin_password
PGADMIN_CONFIG_SERVER_MODE=False
PGADMIN_PORT=8080

# ---- N8N Configuration ----
N8N_VERSION=latest
N8N_PORT=5678

# Timezone Configuration
GENERIC_TIMEZONE=America/Sao_Paulo
TZ=America/Sao_Paulo

# N8N Settings
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true
N8N_RUNNERS_ENABLED=true

# Database Connection for N8N
DB_TYPE=postgresdb
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_SCHEMA=public
DB_POSTGRESDB_PASSWORD=n8n_password

# ---- Container Names ----
POSTGRES_CONTAINER_NAME=n8n-postgres
PGADMIN_CONTAINER_NAME=n8n-pgadmin
N8N_CONTAINER_NAME=n8n

# ---- Restart Policy ----
RESTART_POLICY=unless-stopped

# ---- Volume Driver ----
VOLUME_DRIVER=local

# ---- Network Driver ----
NETWORK_DRIVER=bridge