# Project
COMPOSE_PROJECT_NAME=openldap

# Organization and domain
LDAP_ORGANISATION=Example Corp
LDAP_DOMAIN=example.com
LDAP_BASE_DN=dc=example,dc=com

# Admin credentials (change in production)
LDAP_ADMIN_PASSWORD=admin
LDAP_CONFIG_PASSWORD=admin
LDAP_ADMIN_DN=cn=admin,dc=example,dc=com

# Optional readonly user
LDAP_READONLY_USER=false
LDAP_READONLY_USER_USERNAME=readonly
LDAP_READONLY_USER_PASSWORD=readonly

# Schema options
LDAP_RFC2307BIS_SCHEMA=false

# TLS settings
LDAP_TLS=false
# If LDAP_TLS=true, provide certs under ./certs:
# Expected names by osixia image:
#   ca.crt, tls.crt, tls.key

# Ports (host:container)
LDAP_PORT_389=389
LDAP_PORT_636=636

# phpLDAPadmin settings
PHPLDAPADMIN_HTTPS=false
PHPLDAPADMIN_LDAP_HOSTS=openldap
PHPLDAPADMIN_HTTP_PORT=8080
PHPLDAPADMIN_HTTPS_PORT=8443

# Rede Docker (opcional)
LDAP_DOCKER_NETWORK_NAME=
LDAP_DOCKER_NETWORK_EXTERNAL=false
